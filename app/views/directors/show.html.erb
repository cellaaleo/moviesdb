<%= link_to "Lista de diretores", directors_path %>
<br>

<h1><%= @director.name %></h1>

<p><strong>Nascimento:</strong> <%= @director.birthdate %></p>
<p><strong>Nacionalidade:</strong> <%= @director.nationality %></p>
<p><strong>GÃªnero favorito:</strong> <%= @director.favourite_genre %></p>

<h2>Filmes do diretor:</h2>

<ul>
  <% @movies.each do |movie| %>
    <% if movie.director == @director.name %>
      <li>
        <%= link_to movie.title, movie%>
      </li>
    <% end %>
  <% end %>
</ul>

<button><%= link_to "Editar", edit_director_path(@director) %></button>
<button><%= link_to "Excluir", director_path(@director), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Tem certeza que quer excluir o(a) diretor(a) '#{@director.name}'?"
                    } %></button>