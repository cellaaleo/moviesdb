<%= form_with model: movie do |form| %>
  <div>
    <%= form.label :title %> <span>*</span><br>
    <%= form.text_field :title %>
    <% @movie.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :release %><br>
    <%= form.number_field :release, in: 1900..2100, step: 1  %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['released', 'coming out'], selected: 'released' %>
  </div>


  <div>
    <%= form.label :country %><br>
    <%= form.text_field :country %>
  </div>

  <div>
    <%= form.label :runtime %><br>
    <%= form.text_field :runtime %>
  </div>

  <div>
    <%= form.label :director %><br>
    <%= form.text_field :director %>
  </div>

  <div>
    <%= form.label :genre %><br>
    <%= form.text_field :genre %>
  </div>

  <div>
    <%= form.label :synopsis %><br>
    <%= form.text_area :synopsis %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

